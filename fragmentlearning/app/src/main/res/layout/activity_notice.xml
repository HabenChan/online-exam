<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".testActivity.NotificationActivity">

    <Button
            android:text="发送通知一"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_notification1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="发送通知二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_notification2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/send_notification1"/>

    <Button
            android:text="发送通知三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_notification3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/send_notification2"/>
</androidx.constraintlayout.widget.ConstraintLayout>