<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="Java基础考试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exams_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="这是说明"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="147dp"
            android:layout_height="80dp"
            android:id="@+id/exams_desc"
            app:layout_constraintStart_toEndOf="@+id/exams_name"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/exams_name"
            app:layout_constraintBottom_toBottomOf="@+id/exams_name"/>

    <Button
            android:text="开始考试"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_exams"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/exams_desc"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/exams_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>